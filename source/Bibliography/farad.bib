journal = {Frontiers in Neuroinformatics},
keywords = {computational neuroscience,computing,exascale,large-scale simulation,parallel computing,spiking neuronal network,supercomputer,supercomputer, large-scale simulation, parallel co},
number = {February},
title = {{Corrigendum: Extremely Scalable Spiking Neuronal Network Simulation Code: From Laptops to Exascale Computers}},
